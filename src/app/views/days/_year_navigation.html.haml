.calendar-year-nav{class: position == 'top' ? 'sticky-top bg-white shadow-sm' : 'bg-light', role: "navigation", "aria-label": "Year navigation"}
  - rtl_layout = I18n.locale.to_s.start_with?('ar')
  - prev_icon_classes = ['fa', 'fa-chevron-left']
  - next_icon_classes = ['fa', 'fa-chevron-right']
  .d-flex.align-items-center.py-3{dir: (rtl_layout ? 'ltr' : nil)}
    .flex-fill.text-left
      - if @prev_year
        = link_to days_path(locale: I18n.locale, year: @prev_year), class: 'btn btn-outline-primary btn-prev-year', "aria-label": "Previous year #{@prev_year}" do
          %i{class: prev_icon_classes.join(' '), "aria-hidden": "true"}
          = @prev_year
      - else
        %button.btn.btn-outline-secondary{disabled: true, "aria-label": "No previous year available"}
          %i{class: prev_icon_classes.join(' '), "aria-hidden": "true"}

    .flex-fill.text-center
      %h3.mb-0{"aria-current": "page"}
        %i.fa.fa-calendar.mr-2{"aria-hidden": "true"}
        = @selected_year

    .flex-fill.text-right
      - if @next_year
        = link_to days_path(locale: I18n.locale, year: @next_year), class: 'btn btn-outline-primary btn-next-year', "aria-label": "Next year #{@next_year}" do
          = @next_year
          %i{class: next_icon_classes.join(' '), "aria-hidden": "true"}
      - else
        %button.btn.btn-outline-secondary{disabled: true, "aria-label": "No next year available"}
          %i{class: next_icon_classes.join(' '), "aria-hidden": "true"}
