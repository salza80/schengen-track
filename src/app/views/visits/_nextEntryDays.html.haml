- unless current_person.visa_required? || @next_entry_days.nil?
  - @next_entry_days.each do |day|
    - begin
      - entry_date = l(day.the_date, format: :long)
      - end_date = l(day.the_date + (day.max_remaining_days - 1).days, format: :long)
    - rescue I18n::MissingTranslationData
      - entry_date = day.the_date.strftime('%B %e, %Y')
      - end_date = (day.the_date + (day.max_remaining_days - 1).days).strftime('%B %e, %Y')
    - message = t(
        'visits.reenter_info',
        date: '__DATE__',
        max_days: day.max_remaining_days,
        day_plural: t('visits.day_plural', count: day.max_remaining_days),
        end_date: end_date
      )
    - before_date, after_date = message.split('__DATE__', 2)
    - before_date ||= ''
    - after_date ||= ''
    %p.alert.alert-info.mb-2
      = before_date
      = link_to(entry_date, days_path(year: day.the_date.year, month: day.the_date.month, day: day.the_date.day, locale: I18n.locale), class: 'next-entry-link-text text-primary font-weight-bold')
      = after_date
