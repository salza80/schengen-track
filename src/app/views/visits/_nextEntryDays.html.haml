- unless current_user_or_guest_user.visa_required? || @next_entry_days.nil?
  - @next_entry_days.each do |day|
    %p.alert.alert-info
      = t('visits.reenter_info', 
          date: day.the_date.strftime("%B %d, %Y"), 
          max_days: day.max_remaining_days, 
          day_plural: t('visits.day_plural', count: day.max_remaining_days),
          end_date: (day.the_date + (day.max_remaining_days - 1).days).strftime("%B %d, %Y"))
