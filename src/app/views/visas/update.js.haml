- if @visa.errors.any?
  :plain
    // Visa update failed - show errors in modal
    $('#visaModal .modal-body').html('#{j render("form")}');
- else
  :plain
    // Visa was successfully updated
    $('#visaModal').modal('hide');
    
    // Show success message
    const message = '<div class="alert alert-success alert-dismissible fade show" role="alert">Visa was successfully updated.<button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button></div>';
    $('body').prepend(message);
    
    // Reload page to refresh list
    setTimeout(function() {
      location.reload();
    }, 500);
