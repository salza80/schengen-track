= form_for @user, url: my_details_path, :html => {:class => "form-horizontal"} do |f|
  - if @user.errors.any?
    #error_explanation
      %h2= "#{pluralize(@user.errors.count, "error")} prohibited this person from being saved:"
      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg
  .form-group.row
    .col-sm-2.my-auto
      = f.label :first_name, class: "col-form-label"
    .col-sm-10
      = f.text_field :first_name, :class => "form-control"
  .form-group.row
    .col-sm-2.my-auto
      = f.label :last_name, class: "col-form-label"
    .col-sm-10
      = f.text_field :last_name, :class => "form-control"
  .form-group.row
    .col-sm-2.my-auto
      = f.label :nationality_id, class: "col-form-label"
    .col-sm-10
      = f.collection_select(:nationality_id, Country.all.order_by_name, :id, :name,{}, {:class => "form-control custom-select"})
  .actions
    .form-group.row
      .col-sm-12
        = f.submit 'Save', class: "btn btn-primary form-btn float-right"