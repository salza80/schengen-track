<div class="card">
  <div class="card-body">
    <div class="row card-title">
      <div class="col-md-5">
        <h3>Change your password</h3>
      </div>
      <div class="col-md-7">
        <div class="d-flex float-right">
          <%= image_tag("facebook_icon.png", alt: "Facebook", class: "mr-2") %>
          <%= button_to "Log in with Facebook", user_facebook_omniauth_authorize_path, class: "btn btn-link" %>
        </div>
      </div>
    </div>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "form-horizontal" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>

      <div class="form-group row">
        <%= f.label :password, "New password", class: "col-sm-2 col-form-label" %>
        <div class="col-sm-10">
          <%= f.password_field :password, autofocus: true, autocomplete: "off", class: "form-control" %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :password_confirmation, "Confirm new password", class: "col-sm-2 col-form-label" %>
        <div class="col-sm-10">
          <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-sm-12">
          <%= f.submit "Change my password", class: "btn btn-primary form-btn float-right" %>
        </div>
      </div>
    <% end %>
  </div>
  <div class="card-footer">
    <%= link_to "Log in", new_session_path(resource_name) %><br />
  </div>
</div>

