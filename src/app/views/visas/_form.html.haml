= form_for @visa, html: { class: "form-horizontal" }, remote: true do |f|
  - if @visa.errors.any?
    .alert.alert-danger.alert-dismissible.fade.show{role: "alert"}
      %button.close{"type" => "button", "data-dismiss" => "alert", "aria-label" => "Close"}
        %span{"aria-hidden" => "true"} &times;
      %strong= t('errors.prohibited_saving_visa', count: @visa.errors.count)
      %ul.mb-0.mt-2
        - @visa.errors.full_messages.each do |msg|
          %li= msg
  .form-group.row
    .col-sm-2.my-auto
      = f.label :start_date, class: "col-form-label"
    .col-sm-10.date-form-group
      = f.date_select :start_date, {}, { class: "form-control custom-select" }
  .form-group.row
    .col-sm-2.my-auto
      = f.label :end_date, class: "col-form-label"
    .col-sm-10.date-form-group
      = f.date_select :end_date, {}, { class: "form-control custom-select" }
  .form-group.row
    .col-sm-2.my-auto
      = f.label :no_entries, class: "col-form-label"
    .col-sm-10
      = f.number_field :no_entries, class: "form-control"
      = t('common.multi_unlimited_entries')
  .actions
    .form-group.row
      .col-sm-12
        = f.submit t('common.save'), class: "btn btn-primary form-btn float-right"
