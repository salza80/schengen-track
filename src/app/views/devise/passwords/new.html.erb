<div class="card">
  <div class="card-body">
    <div class="row card-title">
      <div class="col-md-5">
        <h3>Forgot your password?</h3>
      </div>
      <div class="col-md-7">
        <div class="d-flex float-right">
          <%= image_tag("facebook_icon.png", alt: "Facebook", class: "mr-2") %>
          <%= link_to "Log in with Facebook", omniauth_authorize_path(resource_name, "facebook", method: :post), class: "btn btn-link" %><br />
        </div>
      </div>
    </div>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "form-horizontal" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="form-group row">
        <%= f.label :email, class: "col-sm-2 col-form-label" %>
        <div class="col-sm-10">
          <%= f.email_field :email, autofocus: true, class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-12">
          <%= f.submit "Send Reset", class: "btn btn-primary form-btn float-right" %>
        </div>
      </div>
    <% end %>
  </div>
  <div class="card-footer">
    Not yet registered? <%= link_to "Register", new_registration_path(resource_name) %><br />
    Already registered? <%= link_to "Log in", new_session_path(resource_name) %><br />
  </div>
</div>
