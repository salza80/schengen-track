<div class="card">
  <div class="card-body">
    <div class="row card-title">
      <div class="col-md-5">
        <h3><%= t('log_in_page.title') %></h3>
      </div>
      <div class="col-md-7">
        <div class="float-right">
          <a href="<%= user_facebook_omniauth_authorize_path(display: 'page') %>" class="btn" style="background-color: white; color: #333; border: 1px solid #007bff; text-decoration: none;" rel="noopener noreferrer" data-turbo="false">
            <div style="display: flex; align-items: center;">
              <%= image_tag("facebook_icon.png", alt: "Facebook", style: "margin-right: 0.5rem; margin-bottom: 0;") %>
              <span><%= t('log_in_page.log_in_with_facebook') %></span>
            </div>
          </a>
          <div class="d-md-none mt-2">
            <small class="text-muted">
              <i class="fa fa-mobile" aria-hidden="true"></i>
              <em>Mobile tip: If Facebook login doesn't work, try long-press and "Open in new tab"</em>
            </small>
          </div>
        </div>
      </div>
    </div>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { id: 'login', class: "form-horizontal" }) do |f| %>
      <div class="form-group row">
        <%= f.label :email, class: "col-sm-2 col-form-label" %>
        <div class="col-sm-10">
          <%= f.email_field :email, autofocus: true, class: "form-control" %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :password, class: "col-sm-2 col-form-label" %>
        <div class="col-sm-10">
          <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
        </div>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="form-group row">
          <%= f.label :remember_me, t('log_in_page.remember_me_label'), class: "form-check-label col-form-label col-sm-2" %>
          <div class="col-sm-10">
            <div class="form-check">
              <%= f.check_box :remember_me, class: "form-check-input" %>
            </div>
          </div>
        </div>
      <% end -%>

      <div class="form-group row mt-4">
        <div class="col-12 d-flex justify-content-between">
          <%= link_to t('common.cancel', default: 'Cancel'), about_path(locale: I18n.locale), class: "btn btn-secondary" %>
          <%= f.submit t('log_in_page.log_in_button'), class: "btn btn-primary form-btn" %>
        </div>
      </div>
    <% end %>
  </div>
  <div class="card-footer">
    <%= t('log_in_page.not_registered') %> <%= link_to t('log_in_page.register_link'), new_user_registration_path(locale: I18n.locale) %><br />
    <%= t('log_in_page.forgot_password') %> <%= link_to t('log_in_page.reset_password_link'), new_user_password_path(locale: I18n.locale) %><br />
  </div>
</div>
